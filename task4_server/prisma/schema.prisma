generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  name      String     @db.VarChar(150)
  email     String     @db.VarChar(255)
  password  String     @db.Text
  status    UserStatus @default(UNVERIFIED)
  role      UserRole   @default(USER)
  createdAt DateTime
  updatedAt DateTime   @updatedAt

  // Relations
  Verification Verification? @relation(name: "UserVefication")

  @@unique([email])
  @@map("users")
}

enum UserStatus {
  UNVERIFIED
  ACTIVE
  BLOCKED
}

enum UserRole {
  ADMIN
  USER
}

model UserActivity {
  id         String   @id @default(uuid()) @db.Uuid
  date       DateTime
  activeTime Int

  @@map("userActivities")
}

model Verification {
  id          String   @id @default(uuid())
  userId      String   @db.Uuid
  User        User     @relation(fields: [userId], references: [id], name: "UserVefication")
  token       String   @db.Text
  generatedAt DateTime @default(now())

  @@unique([userId])
  @@map("userVerification")
}
